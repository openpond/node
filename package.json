{
  "name": "@openpond/p2p",
  "version": "0.2.2",
  "scripts": {
    "generate:bootstrap": "tsx scripts/generate-bootstrap-ids.ts",
    "node": "tsx src/node.ts",
    "get-peer-id": "tsx scripts/get-peer-id.ts",
    "explorer": "ENV_FILE=.env.agent2 tsx scripts/agent-explorer.ts",
    "server": "ENV_FILE=./server/.env.api tsx server/index.ts",
    "server:prod": "tsx server/index.ts",
    "server:dev": "ENV_FILE=./server/.env.api tsx watch server/index.ts",
    "start": "node dist/server/index.js",
    "prepare": "husky install",
    "build": "rollup -c",
    "prepare-release": "npm run build && node scripts/prepare-release.js",
    "release:patch": "node scripts/bump-version.js patch && git push --follow-tags",
    "release:minor": "node scripts/bump-version.js minor && git push --follow-tags",
    "release:major": "node scripts/bump-version.js major && git push --follow-tags",
    "version": "node -p \"require('./package.json').version\"",
    "proto:gen": "protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. --ts_proto_opt=esModuleInterop=true ./src/proto/*.proto",
    "test:messages": "ENV_FILE=./server/.env.api tsx scripts/test-messages.ts"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.0",
    "@chainsafe/libp2p-noise": "^16.0.0",
    "@chainsafe/libp2p-yamux": "^7.0.1",
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "@libp2p/bootstrap": "^11.0.16",
    "@libp2p/crypto": "^5.0.8",
    "@libp2p/identify": "^3.0.12",
    "@libp2p/interface": "^2.3.0",
    "@libp2p/kad-dht": "^14.1.6",
    "@libp2p/peer-id": "^5.0.9",
    "@libp2p/peer-id-factory": "^4.2.4",
    "@libp2p/tcp": "^10.0.13",
    "@multiformats/multiaddr": "^12.3.3",
    "@types/blessed": "^0.1.25",
    "axios": "^1.7.9",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "body-parser": "^1.20.2",
    "bs58": "^6.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eciesjs": "^0.4.13",
    "eventsource": "^3.0.5",
    "express": "^4.18.2",
    "libp2p": "^2.3.1",
    "long": "^5.2.3",
    "openai": "^4.77.0",
    "protobufjs": "^7.4.0",
    "rxjs": "^7.8.1",
    "secp256k1": "^5.0.1",
    "terminal-kit": "^3.0.1",
    "uint8arrays": "^5.1.0",
    "viem": "^2.21.57"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/body-parser": "^1.19.5",
    "@types/chalk": "^2.2.4",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^20.11.16",
    "@types/secp256k1": "^4.0.6",
    "axios": "^1.6.2",
    "esbuild": "^0.19.12",
    "husky": "^8.0.3",
    "pkg": "^5.8.1",
    "rollup": "^4.9.6",
    "ts-proto": "^1.165.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "bin": {
    "p2p-node": "dist/p2p-node"
  },
  "type": "module",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18"
  }
}
